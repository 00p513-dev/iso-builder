prompt 0

MENU HIDDEN
MENU AUTOBOOT Booting Ubuntu Cinnamon live disk in # seconds
timeout 50

label live-@FLAVOUR@
	menu label ^Try or install Ubuntu Cinnamon
	menu default
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@

label live-failsafe
	menu label Start Ubuntu Cinnamon (Safe Graphics)
	set gfxpayload=keep
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@ nomodeset

label hd
	menu label ^Boot from first hard disk
	localboot 0x80

label rb
	menu label ^Reboot system
	reboot

label power
	MENU LABEL ^Power Off
	COM32 poweroff.c32
